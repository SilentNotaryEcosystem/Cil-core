{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi-style": ["error", "last"],
    "linebreak-style": ["error", "unix"],
    "no-prototype-builtins": "off",
    "no-async-promise-executor": "off",
    "no-useless-escape": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }]
  },
  "globals": {
    "logger": true,
    "callerAddress": true,
    "block": true,
    "contractTx": true,
    "delegatecall": true,
    "value": true,
    "send": true
  }
}
